$("#micropost-<%= @micropost.id %> .fav_unfav_form").html(
    "<%= escape_javascript(render "shared/unfavor", micropost: @micropost) %>"
);
$("#micropost-<%= @micropost.id %> .fav_count").html("<%= @micropost.favored_users.count %>");

